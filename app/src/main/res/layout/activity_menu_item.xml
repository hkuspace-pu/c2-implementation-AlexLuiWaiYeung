<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuItem">

    <!-- Column 1: Image (Left) -->
    <ImageView
        android:id="@+id/iv_menu_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_food_placeholder"
        android:contentDescription="Menu item image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Column 2: Name & Description (Middle) -->
    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/iv_menu_image"
        app:layout_constraintTop_toTopOf="@+id/iv_menu_image"
        app:layout_constraintEnd_toStartOf="@+id/tv_menu_price"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginEnd="16dp"
        tools:text="Margherita Pizza"/>

    <TextView
        android:id="@+id/tv_menu_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Item description here..."
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@+id/tv_menu_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_menu_name"
        app:layout_constraintBottom_toTopOf="@+id/layout_staff_actions"
        android:layout_marginTop="4dp"
        tools:text="Fresh tomatoes and mozzarella cheese"/>

    <!-- Column 3: Price (Right) -->
    <TextView
        android:id="@+id/tv_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_menu_image"
        tools:text="$12.99"/>

    <!-- Action Buttons Row (Below description) -->
    <LinearLayout
        android:id="@+id/layout_staff_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tv_menu_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu_description"
        app:layout_constraintEnd_toEndOf="@+id/tv_menu_description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:textSize="12sp"
            android:paddingVertical="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:textSize="12sp"
            android:paddingVertical="4dp" />
    </LinearLayout>

    <!-- Order Button for Guests -->
    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_menu_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu_price"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Divider Line -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:alpha="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_menu_image"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>